#include <iostream>
#include <string>

using namespace std;

struct Conta{
	string numero;
	string cpfTitular;
	string nomeTitular;
	float saldo;

	void sacar(float valorASacar){
	if(valorASacar < 15){
		cout << "Ops! Não é possível sacar valores abaixo de R$15,00" << endl;
		}else if(valorASacar > saldo){
        cout << "Ops! Você não possui saldo suficiente." << endl;
	}else{
		saldo -= valorASacar;
    }

	};

	void depositar(float valorADepositar){
		if(valorADepositar < 10){
			cout << "Ops! Não é possível depositar valores abaixo de R$10,00" << endl;
		}else{
			saldo += valorADepositar;
		}
	};


int main(){
	Conta umaConta;
	Conta outraConta;

	umaConta.numero = "123456";
	umaConta.cpfTitular = "123.456.789-19";
	umaConta.nomeTitular = "Eduardo";
	umaConta.saldo = 100;

	outraConta.saldo = 200;

	outraConta.depositar(500);
	outraConta.sacar(200);

	cout << "Uma conta: " << umaConta.saldo << " Outra conta: " << outraConta.saldo<< endl;

	system("PAUSE");

	}
};
