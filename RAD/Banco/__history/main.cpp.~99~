#include <iostream>
#include <string>
#include "Conta.h"
#include "Titular.h"

using namespace std;

void exibeSaldo(const Conta& conta){
    cout << "O saldo da conta é: " << conta.getSaldo();
}

int main(){
	Titular titular("123.456.789-10","Eduardo");
	Conta umaConta("123456", titular);
	umaConta.depositar(500);
	umaConta.sacar(200);

	cout << "Uma conta: " << umaConta.getSaldo()<< endl;

	Conta outraConta("654321", "Alex", titular);
	outraConta.depositar(300);
	outraConta.sacar(50);

	cout << "Uma outra conta: " << outraConta.getSaldo()<< endl;

    cout << "Número de contas: " << Conta::getNumeroDeConta() << endl;

	system("PAUSE");
}
